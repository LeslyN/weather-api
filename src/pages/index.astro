				<linearGradient
					id="paint0_linear_1805_24383"
					x1="247.358"
					y1="0"
					x2="247.358"
					y2="622.479"
					gradientUnits="userSpaceOnUse"
				>
					<stop stop-opacity="0.9"></stop>
					<stop offset="1" stop-opacity="0.2"></stop>
				</linearGradient>
			</defs>
		</svg>
		<h1>Welcome to <span class="text-gradient">Weather</span></h1>
	  <span id="token" data-token={token}></span>
		<section class="weather-container">
			<div class="flex items-center">
				<span class="text-black">
					<input type="text" class=" md:w-96" id="" placeholder="Enter your location" spellcheck="false">
				</span>
				<button class="text-gradient pl-4">
					<span class="fas fa-search"></span>
				</button>
			</div>
			<div class="my-6 text-center">
				<img src="" alt="/eather" class="inline weather-icon">
				<p id="temperature-degrees" class="text-3xl text-extra-bold"></p>
        <h3 id="location-name"></h3>
			</div>
			
			<p class="condition-text text-2xl md:pb-2 font-bold text-center md:text-justify md:ml-8"></p>
			<div class="flex flex-col md:flex-row md:justify-around items-center mt-2">
				<div class="flex flex-col items-center my-6 md:my-0">
					<p>
						<span class="mr-2"><i class="fas fa-water"></i></span>
						<span class="text-xl">Humidity</span>
					</p>
					<span class="humidity-quantity text-2xl text-extra-bold"></span>
				</div>
				
				<div class="flex flex-col items-center">
					<p>
						<span class="mr-2"><i class="fas fa-wind"></i></span>
						<span class="text-xl">Wind speed</span>
					</p>
					<span class="wind-speed text-xl text-extra-bold"></span>
				</div>
				
			</div>
		</section>
		
	</main>
</Layout>

<style>
	main {
		@apply m-auto p-4 text-white text-xl justify-center items-center flex flex-col tracking-wide h-screen;
		width: 800px;
		max-width: calc(100% - 2rem);
		line-height: 1.6;
		/* height: 100vh; */
		font-family: 'Merienda', sans-serif;
	}
	.astro-a {
		@apply absolute h-auto;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		z-index: -1;
	}
	h1 {
		@apply font-bold text-center leading-none;
		font-size: 4rem;
		margin-bottom: 3rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.weather-container {
		@apply p-6;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		border-radius: 8px;
	}
	.link-card-grid {
		@apply grid gap-8 p-0;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
	}
	input[type='text'] {
		@apply rounded-lg p-2 border-gray-300 outline-none focus:border-blue-500;
	}
</style>
<script>
  const element = document.querySelector('#token');
  if (element) {
    const token = element.dataset.token;
    const results = await fetch(`https://api.weatherapi.com/v1/current.json?key=${token}&q=London&aqi=no`);
    const data = await results.json();
    const locationNameHtml = document.querySelector('#location-name');
    const weatherIconHtml = document.querySelector('.weather-icon');
    const temperatureDegreesHtml = document.querySelector('#temperature-degrees');
    const conditionTextHtml = document.querySelector('.condition-text');
    const humidityQuantityHtml = document.querySelector('.humidity-quantity');
    const windSpeedHtml = document.querySelector('.wind-speed');


    if (locationNameHtml) {
      locationNameHtml.innerHTML = data.location.name;
    }
    if (weatherIconHtml) {
      weatherIconHtml.src = data.current.condition.icon;
    }
    if (temperatureDegreesHtml) {
      temperatureDegreesHtml.innerHTML = `${ data.current.temp_c }ÂºC`;
    }
    if (conditionTextHtml) {
      conditionTextHtml.innerHTML = data.current.condition.text;
    }
    if (humidityQuantityHtml) {
      humidityQuantityHtml.innerHTML = `${ data.current.humidity }%`;
    }
    if (windSpeedHtml) {
      windSpeedHtml.innerHTML = `${ data.current.wind_kph } km/h`;
    }

    element.remove();
  }
</script>

